generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meeting {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  department String
  purpose    String
  date       String
  time       String
  status     String   @default("Pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("meetings")
}

model TonerRequest {
  id          Int      @id @default(autoincrement())
  division    String
  printerName String
  model       String
  requestedBy String
  pageCounter String
  date        String
  notes       String?
  status      String   @default("Pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("toner_requests")
}
